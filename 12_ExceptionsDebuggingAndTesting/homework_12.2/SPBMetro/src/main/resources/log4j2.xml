<?xml version="1.0" encoding="UTF-8"?>

<configuration status="ERROR">
    <appenders>

        <File filename="logs/search.log" name="SearchFile">
            <PatternLayout pattern="%msg%n"/>
            <Filters>
                <MarkerFilter marker="INPUT_HISTORY"/>
            </Filters>
        </File>

        <File filename="logs/input_errors.log" name="InvalidStations">
            <PatternLayout pattern="%msg%n"/>
            <Filters>
                <MarkerFilter marker="INVALID_STATIONS"/>
            </Filters>
        </File>

        <File filename="logs/exceptions.log" name="Exceptions">
            <PatternLayout pattern="%msg%n"/>
            <Filters>
                <MarkerFilter marker="EXCEPTIONS"/>
            </Filters>
        </File>

    </appenders>

    <loggers>
        <root level="ERROR">
            <appender-ref ref="INPUT_HISTORY"/>
            <appender-ref ref="INVALID_STATION"/>
            <appender-ref ref="EXCEPTIONS"/>
        </root>
    </loggers>
</configuration>